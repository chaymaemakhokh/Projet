@page
@model Projet.Pages.AuthenticationModel
@{
}
<h1>Authentification</h1>
<form method="post" class="col-4 offset-4">
    <div class="form-group">
        <label class="form-label">Username</label>
        <input type="text" asp-for="Compte.Username" class="form-control" />
        <span asp-validation-for="Compte.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Password</label>
        <input type="password" asp-for="Compte.Password" class="form-control" />
        <span asp-validation-for="Compte.Password" class="text-danger"></span>
    </div>
    <div class="text-danger">
        @Model.MsgErr
    </div>
    <div>
        <button type="submit" class="btn btn-success">Connect</button>

    </div>

</form>
<div class="offset-4">
    <p>
        Dont have an account?        <a href="/Register">Register Now</a>
    </p>
</div>
